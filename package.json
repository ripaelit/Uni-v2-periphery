{
  "name": "solproxy",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@uniswap/lib": "4.0.1-alpha",
    "@uniswap/v2-core": "1.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.14.0",
    "hardhat": "^2.8.4"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-etherscan": "^3.1.8",
    "@openzeppelin/contracts": "^4.9.3",
    "@pythnetwork/pyth-sdk-solidity": "^2.2.1",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethers": "^5.0.0",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "build": "yarn clean && yarn compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",

    "deploy-all": "npx hardhat run scripts/deploy/deployAll.ts",
    "verify-all": "npx hardhat run scripts/verify/verifyAll.ts",
    "mint": "npx hardhat run scripts/deploy/mint.ts",
    "deploy-ftokens": "npx hardhat run scripts/deploy/deployFTokens.ts",
    "verify-ftokens": "npx hardhat run scripts/verify/verifyFTokens.ts",
    "set-oracle": "npx hardhat run scripts/deploy/OracleContract.set.ts",
    "set-secret": "npx hardhat run scripts/deploy/SecretContract.set.ts",
    "set-leverage": "npx hardhat run scripts/deploy/setLeveragePercent.ts",

    "pair": "yarn hardhat test scripts/test/TestContract.test.ts",
    "test-box": "yarn hardhat test scripts/test/BoxV2.test.ts",
    "test-oracle": "yarn hardhat test scripts/test/OracleContract.test.ts",
    "test-oracle-testnet": "yarn hardhat test scripts/test/testnet/OracleContract.test.ts",
    "test-oracle-v2-testnet": "yarn hardhat test scripts/test/testnet/OracleContractV2.test.ts",
    "test-secret": "yarn hardhat test scripts/test/SecretContract.test.ts",
    "test-secret-v2": "yarn hardhat test scripts/test/SecretContractV2.test.ts",
    "test-router": "yarn hardhat test scripts/test/FairSwapRouter.test.ts",
    "test-router-livenet": "yarn hardhat test scripts/test/livenet/FairSwapRouter.test.ts",
    "test-router-testnet": "yarn hardhat test scripts/test/testnet/FairSwapRouter.test.ts",

    "verify": "yarn hardhat run scripts/verify/verify.ts",
    "verify-mock": "yarn hardhat run scripts/verify/verifyMock.ts --network polygonMumbai",
    "coverage": "yarn build && npx hardhat coverage --temp artifacts --network coverage",
    "postinstall": "yarn compile",
    "lint": "gts lint && npx hardhat check",
    "fix": "gts fix",
    "pretest": "yarn compile",
    "posttest": "yarn lint",
    "node:start": "npx hardhat node",
    "node:run": "npx hardhat run --network localhost "
  }
}
